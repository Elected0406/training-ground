<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
            <div class="row">
                <div class="col-xs-12- col-sm-4">
                    <div class="logo"><a href="main.asp"><img src="~/Content/img/ej.png" class="img-responsive" alt="Energy Journal logo"></a> </div>
                </div>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("PRIJZEN", "Index", "Home")</li>
                <li>@Html.ActionLink("DE REDACTIE", "Index", "Home")</li>
                <li>@Html.ActionLink("ABONNEMENT", "Index", "Home")</li>
                <li>@Html.ActionLink("CHARTS", "Index", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
    </div>
    <hr style="width:100%;height:3px;background-color:#1b3415;margin:0;">
        @RenderBody()
        <footer class="footer" id="main-footer">
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-sm-6"><p><span class="footer-logo"><img src="~/Content/img/footer-loog.png" alt="Energy News"></span></p></div>
                    </div>
                    <div class="row">
                        <p> <a href="#">Disclaimer</a> | <a href="#">Terms &amp; Conditions</a> | <a href="#">Privacy Policy</a></p>
                    </div>
                </div>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
